<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/suggest_item_view"
    android:background="@drawable/default_tool_bar_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/suggestionItem"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/sug_item_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/suggest_item_padding"
            android:layout_marginRight="@dimen/suggest_item_padding"
            android:src="@drawable/ic_fav_default"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/default_suggestion_line_medium_text_color"
                android:id="@+id/sug_item_title"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/default_suggestion_line_small_text_color"
                android:id="@+id/sug_item_data"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/sug_item_icon_tab"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="@dimen/suggest_item_padding"
            android:layout_marginRight="@dimen/suggest_item_padding"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_sug_tab"/>
    </LinearLayout>
</LinearLayout>
