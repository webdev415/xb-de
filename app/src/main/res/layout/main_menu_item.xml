<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/main_menu_item"
    android:background="@drawable/default_std_item_bg"
    android:padding="5dp"
    android:layout_width="@dimen/main_menu_item_width"
    android:layout_height="@dimen/main_menu_item_height"
    style="@style/StdBarElement">
    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <TextView
        android:textSize="@dimen/main_menu_item_font_size"
        android:textColor="@color/default_menu_text_color"
        android:ellipsize="end"
        android:id="@+id/menu_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>
</LinearLayout>
