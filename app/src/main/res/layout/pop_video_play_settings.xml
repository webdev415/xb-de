<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ply_setting_container"
    android:background="@drawable/white"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/ply_setting_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/title_open_method"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/default_list_diver"/>
    <ListView
        android:id="@+id/open_method_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/default_list_diver"/>
    <TextView
        android:gravity="center"
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="@string/empty_video_cast_list"/>
</LinearLayout>
