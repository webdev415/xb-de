<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/neutral_text_color"
            android:id="@+id/text_info"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dlg_save_tab_note"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:id="@+id/folder_name"
                android:background="@drawable/editor_selector"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="@string/dlg_tabs_folder_hit"
                android:singleLine="true"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/select_dir">
                <Button
                    android:textSize="15sp"
                    android:id="@+id/btn_cancel"
                    android:background="@drawable/btn_cancel_selector"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/btn_text_cancel"
                    android:layout_weight="1"
                    android:stateListAnimator="@null"/>
                <Button
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:id="@+id/btn_ok"
                    android:background="@drawable/btn_ok_selector"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/btn_text_ok"
                    android:layout_weight="1"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
